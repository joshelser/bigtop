# -*- makefile -*-
SHELL=/bin/bash

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@

override_dh_auto_build:
	env ACCUMULO_VERSION=${ACCUMULO_BASE_VERSION} bash debian/do-component-build -Dmaven.repo.local=${HOME}/.m2/repository

override_dh_auto_install:
	bash -x debian/install_accumulo.sh \
		--build-dir=. \
		--conf-dir=/etc/accumulo/conf \
		--doc-dir=usr/share/doc/accumulo-doc \
		--prefix=debian/tmp \
		--extra-dir=debian
	bash debian/install_init_scripts.sh

override_dh_shlibdeps:
	echo "Skipping shlibdeps!"
	#dh_shlibdeps --exclude=32

